{
  "/api/admin/catalogue/products": {
    "post": {
      "tags": ["Product Management"],
      "summary": "Create Product",
      "description": "Create new product.",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ProductCreationSchema"
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Create product.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean",
                    "description": "Boolean indicating whether the request was successful."
                  },
                  "data": {
                    "$ref": "#/components/schemas/ProductSchema"
                  },
                  "message": {
                    "type": "string",
                    "example": "Created Product"
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Invalid data error.",
          "content": {
            "application/json": {
              "examples": {
                "InvalidIds": {
                  "summary": "Invalid Id",
                  "value": {
                    "success": false,
                    "message": "Invalid ids",
                    "errors": {
                      "brand": "string",
                      "subcategory": "string",
                      "attributes": [
                        "string",
                        "string"
                      ]
                    }
                  }
                }
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/UnauthenticatedUser"
        },
        "403": {
          "$ref": "#/components/responses/UnauthorizedUser"
        },
        "404": {
          "description": "Not found error.",
          "content": {
            "application/json": {
              "examples": {
                "BrandNotFound": {
                  "summary": "Brand not found",
                  "value": {
                    "success": false,
                    "message": "Brand not found"
                  }
                },
                "SubcategoryNotFound": {
                  "summary": "Subcategory not found",
                  "value": {
                    "success": false,
                    "message": "Subcategory not found"
                  }
                }
              }
            }
          }
        },
        "409": {
          "description": "Conflict error.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean",
                    "example": false,
                    "description": "Indicates the request failed."
                  },
                  "message": {
                    "type": "string",
                    "example": "Product with same name exists in this subcategory for this brand"
                  }
                }
              }
            }
          }
        },
        "422": {
          "description": "Validation error (if request body is missing required fields, or has invalid field values).",
          "content": {
            "application/json": {
              "examples": {
                "ValidationError": {
                  "summary": "Validation Error",
                  "value": {
                    "success": false,
                    "message": "Validation Error",
                    "errors": {
                      "subcategory": [
                        "Please select a subcategory"
                      ],
                      "brand": [
                        "Please select a brand"
                      ],
                      "name": [
                        "Please enter a product name"
                      ],
                      "attributes": {
                        "01abcd091ab01a0123ab012a": [
                          "Please enter a value or variants"
                        ],
                        "01abcd091ab01a0123ab012b": {
                          "value": [
                            "Please enter a value"
                          ]
                        },
                        "01abcd091ab01a0123ab012c": {
                          "variants": [
                            "Please add at least 1 variant"
                          ]
                        },
                        "01abcd091ab01a0123ab012d": [
                          "Please enter either a value or a variant, not both"
                        ],
                        "01abcd091ab01a0123ab012e": {
                          "variants": {
                            "0": {
                              "value": [
                                "Please enter a variant value"
                              ],
                              "slug": [
                                "Please enter a variant slug"
                              ]
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "AttributeValidationError": {
                  "summary": "Attribute Validation Error",
                  "value": {
                    "success": false,
                    "message": "Product attributes don’t match the subcategory requirements",
                    "errors": {
                      "attributes": {
                        "01abcd091ab01a0123ab012a": [
                          "The selected subcategory requires this attribute"
                        ],
                        "01abcd091ab01a0123ab012b": {
                          "value": [
                            "The selected subcategory requires a value"
                          ]
                        },
                        "01abcd091ab01a0123ab012c": {
                          "variants": [
                            "The selected subcategory requires variants"
                          ]
                        }
                      }
                    }
                  }
                },
                "AttributeMetadataValidationError": {
                  "summary": "Attribute Meta Validation Error",
                  "value": {
                    "success": false,
                    "message": "Product attributes don’t match the subcategory requirements",
                    "errors": {
                      "attributes": {
                        "01abcd091ab01a0123ab012a": {
                          "value": [
                            "Please enter a shorter attribute value in 25 characters"
                          ]
                        },
                        "01abcd091ab01a0123ab012b": {
                          "value": [
                            "Please enter a number within 7, as the the attribute value"
                          ]
                        },
                        "01abcd091ab01a0123ab012c": {
                          "value": [
                            "Invalid attribute value, attribute requires boolean value"
                          ]
                        },
                        "01abcd091ab01a0123ab012d": {
                          "value": [
                            "Invalid attribute value, option index should be at most 2"
                          ]
                        },
                        "01abcd091ab01a0123ab012e": {
                          "variants": {
                            "0": {
                              "name": [
                                "Invalid attribute value, attribute requires color name"
                              ],
                              "hexCode": [
                                "Invalid attribute value, attribute requires a valid hex code"
                              ]
                            }
                          }
                        },
                        "01abcd091ab01a0123ab012f": {
                          "value": [
                            "Invalid attribute value, attribute requires record value"
                          ]
                        },
                        "01abcd091ab01a0123ab012g": {
                          "value": {
                            "0": [
                              "Invalid attribute value, attribute requires the option index"
                            ],
                            "1": [
                              "Invalid attribute value, option index should be at least 0"
                            ],
                            "2": [
                              "Invalid attribute value, option index should be at most 2"
                            ]
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "500": {
          "$ref": "#/components/responses/InternalServerError"
        }
      }
    }
  }
}
