{
  "/api/admin/catalogue/products": {
    "post": {
      "tags": ["Product Management"],
      "summary": "Create Product",
      "description": "Create new product.",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ProductCreationSchema"
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Create product.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean",
                    "description": "Boolean indicating whether the request was successful."
                  },
                  "data": {
                    "$ref": "#/components/schemas/ProductSchema"
                  },
                  "message": {
                    "type": "string",
                    "example": "Created Product"
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Invalid data error",
          "content": {
            "application/json": {
              "examples": {
                "InvalidIds": {
                  "summary": "Invalid Id",
                  "value": {
                    "success": false,
                    "message": "Invalid ids",
                    "errors": {
                      "brand": "string",
                      "subcategory": "string",
                      "attributes": [
                        "string",
                        "string"
                      ]
                    }
                  }
                }
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/UnauthenticatedUser"
        },
        "403": {
          "$ref": "#/components/responses/UnauthorizedUser"
        },
        "422": {
          "description": "Validation error (if request body is missing required fields, or has invalid field values).",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean",
                    "example": false,
                    "description": "Indicates the request failed."
                  },
                  "message": {
                    "type": "string",
                    "example": "Validation Error",
                    "description": "Error message."
                  },
                  "errors": {
                    "type": "object",
                    "description": "Validation error details for the fields.",
                    "properties": {
                      "subcategory": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "example": ["Please select a subcategory"],
                        "description": "Validation errors for the subcategory field."
                      },
                      "brand": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "example": ["Please select a brand"],
                        "description": "Validation errors for the brand field."
                      },
                      "name": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "example": ["Please enter a product name"],
                        "description": "Validation errors for the name field."
                      },
                      "attributes": {
                        "type": "object",
                        "example": {
                          "01abcd091ab01a0123ab012a": [
                            "Please enter a value or variants"
                          ],
                          "01abcd091ab01a0123ab012b": {
                            "value": [
                              "Please enter a value"
                            ]
                          },
                          "01abcd091ab01a0123ab012c": {
                            "variants": [
                              "Please add at least 1 variant"
                            ]
                          },
                          "01abcd091ab01a0123ab012d": [
                            "Please enter either a value or a variant, not both"
                          ],
                          "01abcd091ab01a0123ab012e": {
                            "variants": {
                              "0": {
                                "value": [
                                  "Please enter a variant value"
                                ],
                                "slug": [
                                  "Please enter a variant slug"
                                ]
                              }
                            }
                          }
                        },
                        "description": "Validation errors for the attribute fields."
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "500": {
          "$ref": "#/components/responses/InternalServerError"
        }
      }
    }
  }
}
