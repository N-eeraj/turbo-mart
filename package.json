{
  "name": "turbo-mart",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:ui": "turbo run dev --filter=store-ui --filter=admin-ui --parallel",
    "dev:api": "turbo run dev --filter=store-api --filter=admin-api --parallel",
    "dev:store": "turbo run dev --filter=store-ui --filter=store-api --parallel",
    "dev:admin": "turbo run dev --filter=admin-ui --filter=admin-api --parallel",
    "drizzle:push": "npx --env-file=.env drizzle-kit push --config ./packages/database/src/drizzle/config.ts",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.2.0",
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "express": "^5.1.0",
    "mailtrap": "^4.2.0",
    "simple-vue-camera": "^1.1.3",
    "zod": "^4.1.12"
  }
}
